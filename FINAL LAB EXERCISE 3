KOTLIN
package com.example.mainactivity 

import android.os.Bundle
import android.widget.ArrayAdapter
import android.widget.AutoCompleteTextView
import android.widget.Spinner
import androidx.appcompat.app.AppCompatActivity 

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main) 

        val countryAutoComplete: AutoCompleteTextView = findViewById(R.id.countryAutoComplete)
        val countries = arrayOf("USA", "United Kingdom", "Canada", "Australia", "Germany")
        val countryAdapter = ArrayAdapter(this, android.R.layout.simple_list_item_1, countries)
        countryAutoComplete.setAdapter(countryAdapter) 

        val categorySpinner: Spinner = findViewById(R.id.categorySpinner)
        val categories = arrayOf("General Inquiry", "Technical Support", "Billing", "Feedback", "Other")
        val spinnerAdapter = ArrayAdapter(this, android.R.layout.simple_spinner_item, categories)
        spinnerAdapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item)
        categorySpinner.adapter = spinnerAdapter
    }
}


XML
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
