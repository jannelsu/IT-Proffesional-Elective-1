package com.example.lifecycleexample;

import android.os.Bundle;
import android.util.Log;
import androidx.appcompat.app.AppCompatActivity;

class MainActivity : AppCompatActivity () {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        Log.d(tag: "--demo", msg: "calling onCreate")
        setContentView(R.layout.activity_main)
        
    }

    override fun onStart() {
        //call superclass constructor
        super.onStart()
        Log.d(tag: "--demo", msg: "calling onStart")
    }

    override fun onRestart() {
        //call superclass constructor
        super.onRestart()
        Log.d(tag: "--demo", msg: "calling onRestart")
    }

    override fun onResume() {
        //call superclass constructor
        super.onResume()
        Log.d(tag: "--demo", msg: "calling onResume")
    }

    override fun onPause() {
        //call superclass constructor
        super.onPause()
        Log.d(tag: "--demo", msg: "calling onPause")
    }

    override fun onStop() {
        //call superclass constructor
        super.onStop()
        Log.d(tag: "--demo", msg: "calling onStop")
    }

    override fun onDestroy() {
        //call superclass constructor
        super.onDestroy()
        Log.d(tag: "--demo", msg: "calling onDestroy")
    
}

